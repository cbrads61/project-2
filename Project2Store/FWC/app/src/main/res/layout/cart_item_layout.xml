<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/gear_photo_cart"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:background="@color/colorAccent"
            android:layout_centerVertical="true"
            android:layout_marginRight="10sp"/>

        <TextView
            android:id="@+id/gear_name_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="GEAR NAME"
            android:layout_toRightOf="@id/gear_photo_cart"/>

        <TextView
            android:id="@+id/gear_type_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="GEAR TYPE"
            android:layout_toRightOf="@id/gear_photo_cart"
            android:layout_below="@+id/gear_name_cart"/>

        <Button
            android:id="@+id/add1button"
            android:layout_width="60sp"
            android:layout_height="35sp"
            android:text="+"
            android:layout_toRightOf="@id/gear_photo_cart"
            android:layout_below="@id/gear_type_cart"/>

        <Button
            android:id="@+id/remove1button"
            android:layout_width="60sp"
            android:layout_height="35sp"
            android:text="-"
            android:layout_toRightOf="@id/add1button"
            android:layout_below="@id/gear_type_cart"/>

        <ImageView
            android:id="@+id/marks_in_cart"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@drawable/markicon"
            android:layout_below="@+id/gear_type_cart"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30sp"
            android:layout_marginLeft="10sp"/>

        <TextView
            android:id="@+id/price_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRICE "
            android:layout_marginTop="10sp"
            android:layout_marginLeft="25sp"
            android:layout_toLeftOf="@id/marks_in_cart"
            android:layout_below="@id/gear_type_cart"/>



    </RelativeLayout>

</android.support.v7.widget.CardView>